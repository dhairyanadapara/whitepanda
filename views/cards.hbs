</div>
{{#each places}}
<div class="row">
    <div class="col s6 m3">
        <div class="card">
            <div class="card-image">
                <input type="hidden" value="{{_id}}" />
                <img src="http://materializecss.com/images/sample-1.jpg">
                <span class="card-title">{{Name}}</span>

            </div>
            <form method="POST" action="/places/{{_id}}?_method=DELETE">
                {{!--
                <input type="hidden" name="_method" value="put" /> --}}
                <button type="submit"></button>

            </form>
            <p class="card-content">Qty: {{Quantity}}</p>
            <p class="card-content">Price : {{Details.Price}}</p>
        </div>
    </div>
</div>
</div>
{{/each}}
</div>

<div>
    <table>
        <th colspan="3">
            Itmes
        </th>
        {{#each places}}
        <tr>
            <td>{{Name}}</td>
            <td>Qty: {{Quantity}}</td>
            <td>Price: {{Details.Price}}</td>
        </tr>
        {{/each}}
        <tr>
            <td colspan="2"> Total </td>
            <td>Price : {{total}}</td>
        </tr>
    </table>
</div>